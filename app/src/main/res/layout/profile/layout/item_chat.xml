<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_c"
    app:layout_constraintTop_toTopOf="parent">


    <TextView
        android:id="@+id/chats_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_6sdp"
        android:fontFamily="@font/montsemibold"
        style="@style/PRIMARY_LABEL"
        app:layout_constraintBottom_toBottomOf="@+id/chats_image"
        app:layout_constraintStart_toEndOf="@+id/chats_image"
        app:layout_constraintTop_toTopOf="@+id/chats_image" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/chats_image"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:background="@color/resaltado"
        android:scaleType="centerCrop"
        app:riv_oval="true"
        app:shapeAppearanceOverlay="@style/circleImageView" />



</androidx.constraintlayout.widget.ConstraintLayout>