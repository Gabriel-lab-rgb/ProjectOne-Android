<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/_20sdp"
    android:paddingStart="@dimen/_12sdp"
    android:id="@+id/item_c">


    <TextView
        android:id="@+id/chats_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_6sdp"
        android:fontFamily="@font/montsemibold"
        style="@style/PRIMARY_LABEL"
        android:text="Grangamer2018"
        android:textColor="@color/primary"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintStart_toEndOf="@+id/chats_image"
        app:layout_constraintTop_toTopOf="@+id/chats_image" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/chats_image"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:background="@color/resaltado"
        android:scaleType="centerCrop"
        app:riv_oval="true"
        app:shapeAppearanceOverlay="@style/circleImageView" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adios buenas noches!!!"
        style="@style/SECONDARY_LABEL"
        android:layout_marginStart="@dimen/_6sdp"
        app:layout_constraintBottom_toBottomOf="@+id/chats_image"
        app:layout_constraintStart_toEndOf="@+id/chats_image"
        app:layout_constraintTop_toBottomOf="@+id/chats_username" />

    <TextView
        android:id="@+id/chats_fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25/04/2017"
        style="@style/SECONDARY_LABEL"
        android:textSize="@dimen/_8ssp"
        android:layout_marginEnd="@dimen/_12sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>