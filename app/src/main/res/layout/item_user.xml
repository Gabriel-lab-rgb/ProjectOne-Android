<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_10sdp"
    android:id="@+id/item_u"
    app:layout_constraintTop_toTopOf="parent">



    <TextView
        android:id="@+id/seach_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_6sdp"
        android:text="#agaariveraotero@gmail.com"

        android:textSize="@dimen/_9ssp"
        app:layout_constraintStart_toEndOf="@+id/seach_image"
        app:layout_constraintTop_toBottomOf="@+id/seach_username" />

    <TextView
        android:id="@+id/seach_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_6sdp"
        android:textStyle="bold"
        android:text="Gabriel Rivera Otero"
        android:textSize="@dimen/_9ssp"

        app:layout_constraintStart_toEndOf="@+id/seach_image"
        app:layout_constraintTop_toTopOf="@+id/seach_image" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/seach_image"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:background="@color/resaltado"
        android:scaleType="centerCrop"
        app:riv_oval="true"
        app:shapeAppearanceOverlay="@style/circleImageView" />



</androidx.constraintlayout.widget.ConstraintLayout>