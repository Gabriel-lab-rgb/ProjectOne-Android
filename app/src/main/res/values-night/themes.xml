<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProjectOne" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color.
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>-->
        <!-- Secondary brand color.
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>-->
        <!-- Status bar color.
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>-->
        <!-- Customize your theme here. -->
    </style>

    <!--MODO OSCURO -->
    <style name="BACKGROUND">
        <item name="android:background">#050505</item>
    </style>

    <style name="BACKGROUND_ITEM">
        <item name="android:background">#17181c</item>
    </style>

    <style name="PRIMARY_LABEL">
        <item name="android:fontFamily">@font/montlight</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="PRIMARY_LABEL_BOLD">
        <item name="android:fontFamily">@font/montbold</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="SECONDARY_LABEL">
        <item name="android:fontFamily">@font/montlight</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">#CCCCCC</item>
    </style>

    <style name="INPUT_BACKGROUND_TRASPARENT">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColorHint">@color/secondary_label_dark</item>
    </style>


    <style name="INPUT_BACKGROUND">
        <item name="android:background">#050505</item>
    </style>


    <style name="ICONO_INACTIVO">
        <item name="android:color">@color/icono_inactivo_dark</item>
    </style>



    <style name="BottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetDialogTheme</item>
    </style>
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>